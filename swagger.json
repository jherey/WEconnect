{
	"swagger": "2.0",
	"info": {
		"version": "1.0.0",
		"title": "WeConnect",
		"description": "WeConnect provides a platform that brings businesses and individuals together. This platform creates awareness for businesses and gives the users the ability to write reviews about the businesses they have interacted with. You can proceed to the WeConnect website at [https://jherey.github.io/WeConnect/index.html](https://jherey.github.io/WeConnect/index.html)",
		"contact": {
			"email": "olufayojeremiah@gmail.com"
		},
		"license": {
			"name": "ISC",
			"url": "https://opensource.org/licenses/ISC"
		}
	},
	"host": "weconnect-server.herokuapp.com",
	"basePath": "/api/v1/",
	"tags": [
		{
			"name": "Users",
			"description": "API for users in the system"
		},
		{
			"name": "Businesses",
			"description": "API for businesses in the system"
		},
		{
			"name": "Reviews",
			"description": "API for reviews in the system"
		}
	],
	"schemes": [
		"https"
	],
	"consumes": [
		"application/json"
	],
	"produces": [
		"application/json"
	],
	"paths": {
		"/auth/signup": {
			"post": {
				"summary": "User signup",
				"tags": [
					"Users"
				],
				"description": "Register a user in the system",
				"parameters": [
					{
						"name": "user",
						"in": "body",
						"description": "A new user that we want to register",
						"required": true,
						"schema": {
							"$ref": "#/definitions/UserSignUp"
						}
					}
				],
				"produces": [
					"application/json"
				],
				"responses": {
					"200": {
						"description": "User registered successfully"
					}
				}
			}
		},
		"/auth/login": {
			"post": {
				"summary": "User login",
				"tags": [
					"Users"
				],
				"description": "Login a user",
				"parameters": [
					{
						"name": "user",
						"in": "body",
						"description": "A user that wants to login",
						"required": true,
						"schema": {
							"$ref": "#/definitions/UserLogin"
						}
					}
				],
				"produces": [
					"application/json"
				],
				"responses": {
					"200": {
						"description": "Success"
					}
				}
			}
		},
		"/businesses": {
			"post": {
				"summary": "Register a business",
				"tags": [
					"Businesses"
				],
				"description": "Register a business",
				"parameters": [
					{
						"in": "header",
						"name": "Authorization",
						"description": "Enter token",
						"type": "string",
						"required": true
					},
					{
						"name": "business",
						"in": "body",
						"description": "A new business that we want to register",
						"required": true,
						"schema": {
							"$ref": "#/definitions/BusinessRegister"
						}
					}
				],
				"produces": [
					"application/json"
				],
				"responses": {
					"200": {
						"description": "Business registered successfully"
					}
				}
			},
			"get": {
				"tags": [
					"Businesses"
				],
				"summary": "Get all businesses",
				"responses": {
					"200": {
						"description": "OK",
						"schema": {
							"$ref": "#/definitions/Found"
						}
					}
				}
			}
		},
		"/businesses/{businessId}": {
			"put": {
				"summary": "Update business profile",
				"tags": [
					"Businesses"
				],
				"parameters": [
					{
						"in": "header",
						"name": "Authorization",
						"description": "Enter token",
						"type": "string",
						"required": true
					},
					{
						"name": "businessId",
						"in": "path",
						"description": "The id of the business to be updated",
						"required": "true",
						"type": "integer",
						"format": "int64"
					},
					{
						"name": "business",
						"in": "body",
						"description": "Business with new values of properties",
						"schema": {
							"$ref": "#/definitions/BusinessRegister"
						}
					}
				],
				"responses": {
					"200": {
						"description": "Business uccessfully updated"
					}
				}
			},
			"delete": {
				"summary": "Remove a business",
				"tags": [
					"Businesses"
				],
				"description": "This can only be done by the logged in user.",
				"parameters": [
					{
						"in": "header",
						"name": "Authorization",
						"description": "Enter token",
						"type": "string",
						"required": true
					},
					{
						"name": "businessId",
						"in": "path",
						"description": "The id of the business to be deleted",
						"required": "true",
						"type": "integer",
						"format": "int64"
					}
				],
				"responses": {
					"200": {
						"description": "Business successfully deleted"
					}
				}
			},
			"get": {
				"tags": [
					"Businesses"
				],
				"summary": "Get a business with given ID",
				"parameters": [
					{
						"name": "businessId",
						"in": "path",
						"description": "The id of the business to be found",
						"required": "true",
						"type": "integer",
						"format": "int64"
					}
				],
				"responses": {
					"200": {
						"description": "Business is found",
						"schema": {
							"$ref": "#/definitions/Found"
						}
					},
					"400": {
						"description": "Invalid ID supplied"
					}
				}
			}
		},
		"/businesses?location=location": {
			"get": {
				"tags": [
					"Businesses"
				],
				"summary": "Get all businesses with the specified location",
				"parameters": [
					{
						"name": "location",
						"in": "query",
						"description": "The name of the location to search for",
						"type": "string"
					}
				],
				"responses": {
					"200": {
						"description": "Business exist",
						"schema": {
							"$ref": "#/definitions/Found"
						}
					},
					"400": {
						"description": "Invalid location supplied"
					}
				}
			}
		},
		"/businesses?category=category": {
			"get": {
				"tags": [
					"Businesses"
				],
				"summary": "Get all businesses with the specified category",
				"parameters": [
					{
						"name": "category",
						"in": "query",
						"description": "The name of the category to search for",
						"type": "string"
					}
				],
				"responses": {
					"200": {
						"description": "Business exist",
						"schema": {
							"$ref": "#/definitions/Found"
						}
					},
					"400": {
						"description": "Invalid category supplied"
					}
				}
			}
		},
		"/businesses/{businessId}/reviews": {
			"post": {
				"summary": "Add a review for a business",
				"tags": [
					"Reviews"
				],
				"description": "Review a business",
				"parameters": [
					{
						"in": "header",
						"name": "Authorization",
						"description": "Enter token",
						"type": "string",
						"required": true
					},
					{
						"name": "businessId",
						"in": "path",
						"description": "The id of the business to be found",
						"required": "true",
						"type": "integer",
						"format": "int64"
					},
					{
						"name": "business",
						"in": "body",
						"description": "Add a new business review",
						"schema": {
							"$ref": "#/definitions/BusinessReview"
						}
					}
				],
				"produces": [
					"application/json"
				],
				"responses": {
					"200": {
						"description": "Review sucessfully added"
					}
				}
			},
			"get": {
				"tags": [
					"Reviews"
				],
				"summary": "Get all reviews for a business",
				"parameters": [
					{
						"name": "businessId",
						"in": "path",
						"description": "The id of the business to get all reviews",
						"required": "true",
						"type": "integer",
						"format": "int64"
					}
				],
				"responses": {
					"200": {
						"description": "Business review is found",
						"schema": {
							"$ref": "#/definitions/Found"
						}
					},
					"400": {
						"description": "Invalid ID supplied"
					}
				}
			}
		}
	},
	"definitions": {
		"UserSignUp": {
			"type": "object",
			"required": [
				"firstname",
				"lastname",
				"email",
				"username",
				"password"
			],
			"properties": {
				"firstname": {
					"type": "string"
				},
				"lastname": {
					"type": "string"
				},
				"profilepic": {
					"type": "string"
				},
				"sex": {
					"type": "string"
				},
				"username": {
					"type": "string",
					"uniqueItems": true
				},
				"email": {
					"type": "string",
					"uniqueItems": true
				},
				"password": {
					"type": "string",
					"uniqueItems": true
				}
			}
		},
		"UserLogin": {
			"type": "object",
			"required": [
				"username",
				"password"
			],
			"properties": {
				"username": {
					"type": "string",
					"uniqueItems": true
				},
				"password": {
					"type": "string",
					"uniqueItems": true
				}
			}
		},
		"BusinessRegister": {
			"type": "object",
			"required": [
				"busname",
				"website",
				"telephone",
				"email",
				"category",
				"location"
			],
			"properties": {
				"busname": {
					"type": "string"
				},
				"website": {
					"type": "string"
				},
				"telephone": {
					"type": "string"
				},
				"email": {
					"type": "string"
				},
				"category": {
					"type": "string"
				},
				"location": {
					"type": "string"
				},
				"businfo": {
					"type": "string"
				},
				"address": {
					"type": "string"
				},
				"busimage": {
					"type": "string"
				}
			}
		},
		"Found": {
			"type": "object",
			"required": [
				"business"
			],
			"properties": {
				"business": {
					"type": "object"
				}
			}
		},
		"BusinessReview": {
			"type": "object",
			"required": [
				"review"
			],
			"properties": {
				"review": {
					"type": "string"
				}
			}
		}
	}
}